@model RK_Hotels.Models.Room_Detail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Room_Type" class="control-label">Room Type</label>
                <input asp-for="Room_Type" class="form-control" />
                <span asp-validation-for="Room_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room_Description" class="control-label">Room Description</label>
                <input asp-for="Room_Description" class="form-control" />
                <span asp-validation-for="Room_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price_Per_Night" class="control-label">Price Per Night</label>
                <input asp-for="Price_Per_Night" class="form-control" />
                <span asp-validation-for="Price_Per_Night" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
